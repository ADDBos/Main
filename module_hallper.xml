<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hallper" default="compile.module.hallper">
    <dirname property="module.hallper.basedir" file="${ant.file.module_hallper}"/>
    <property name="module.jdk.home.hallper" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.hallper" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.hallper" value="${project.jdk.classpath}"/>
    <property name="compiler.args.hallper" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
    <property name="hallper.output.dir" value="${module.hallper.basedir}/classes/production/Hallper"/>
    <property name="hallper.testoutput.dir" value="${module.hallper.basedir}/classes/test/Hallper"/>
    <path id="hallper.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>
    <path id="hallper.module.production.classpath">
        <path refid="${module.jdk.classpath.hallper}"/>
    </path>
    <path id="hallper.runtime.production.module.classpath">
        <pathelement location="${hallper.output.dir}"/>
    </path>
    <path id="hallper.module.classpath">
        <path refid="${module.jdk.classpath.hallper}"/>
        <pathelement location="${hallper.output.dir}"/>
    </path>
    <path id="hallper.runtime.module.classpath">
        <pathelement location="${hallper.testoutput.dir}"/>
        <pathelement location="${hallper.output.dir}"/>
    </path>
    <patternset id="excluded.from.module.hallper">
        <patternset refid="ignored.files"/>
    </patternset>
    <patternset id="excluded.from.compilation.hallper">
        <patternset refid="excluded.from.module.hallper"/>
    </patternset>
    <target name="compile.module.hallper" depends="compile.module.hallper.production,compile.module.hallper.tests"
            description="Compile module Hallper"/>
    <target name="compile.module.hallper.production" depends="register.custom.compilers"
            description="Compile module Hallper; production classes"/>
    <target name="compile.module.hallper.tests" depends="register.custom.compilers,compile.module.hallper.production"
            description="compile module Hallper; test classes" unless="skip.tests"/>
    <target name="clean.module.hallper" description="cleanup module">
        <delete dir="${hallper.output.dir}"/>
        <delete dir="${hallper.testoutput.dir}"/>
    </target>
</project>
